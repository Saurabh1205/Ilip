<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sasha" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/theme_color_student</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/AlertDialogTheme</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <!--<item name="popupMatetialDialog">@style/AlertDialogTheme</item> -->
    </style>
    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.Sasha.NoActionBar">

        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>

    </style>
  <!--Dilalog theme-->
    <style name="AlertDialogTheme">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeSpinner">

        <!-- Color when pressed -->


        <!-- Default color for the dropdown arrow and line -->


        <item name="colorControlNormal">@android:color/holo_orange_dark</item>

    </style>


    <style parent="android:Theme.DeviceDefault.Dialog" name="Custom"/>

<!--        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>-->
<!--        <item name="DialogTitleText">Loadingâ€¦</item>-->
<!--        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>-->
<!--        <item name="DialogSpotCount">10</item>-->

<!--    </style>-->
    <style name="CustomProgressDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="text_background_color">#337ab7</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnPrimary">@color/blue</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#337ab7</item>
        <item name="boxStrokeWidth">4dp</item>
    </style>



    <style name="popupTheme" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/orange</item>

    </style>
    <style name="Larger_Drawable">
        <item name="android:textSize">10sp</item>
        <item name="android:scaleX">1.6</item>
        <item name="android:scaleY">1.6</item>
    </style>

    <style name="Normal_Drawable">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Smaller_Drawable">
        <item name="android:textSize">20sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false </item>
        <item name="android:progressDrawable">@drawable/circuler_progress_bar</item>
    </style>
