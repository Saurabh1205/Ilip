<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    android:outlineSpotShadowColor="@color/blue"
    android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/cardBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/subjectName"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data Science and Engineering"
                    android:drawablePadding="8dp"
                    android:textSize="14dp"
                    android:padding="0dp"
                    android:drawableLeft="@drawable/icon_subject"                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/subjectType"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:drawableLeft="@drawable/icon_complsry"
                            android:textSize="12dp"
                            android:padding="3dp"
                            android:textColor="@color/normal_text_color"
                            android:text="SubjectType"/>
                        <TextView
                            android:id="@+id/subjectTeacher"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icon_proffesor"
                            android:drawablePadding="8dp"
                            android:textSize="12dp"
                            android:padding="3dp"
                            android:textColor="@color/normal_text_color"
                            android:text="Subject Employee"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/subjectPercentage"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:paddingLeft="22dp"
                                android:textColor="@color/normal_text_color"
                                android:text="Topics Covered : "
                                />
                            <TextView
                                android:id="@+id/subjectRatio1"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:padding="0dp"
                                android:textColor="@color/blue"
                                android:text="30/"
                                />
                            <TextView
                                android:id="@+id/subjectRatio2"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10dp"
                                android:padding="0dp"
                                android:drawablePadding="8dp"
                                android:textColor="@color/folder_text_color"
                                android:text="/30"
                                />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1.5"
                        android:orientation="vertical">
                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/subjectProgress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:progress="60"
                            android:layout_gravity="center"
                            app:indicatorDirectionCircular="counterclockwise"
                            app:indicatorSize="60dp"
                            app:trackColor="@color/folder_text_color"
                            app:trackThickness="5dp"
                            />
                        <TextView
                            android:id="@+id/subjectAttendance_Percent"
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_marginTop="-43dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:text="60%"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#E4D898" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_weight="1"
                        android:background="#D4B499" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="#F9F4DB"
                        android:layout_weight="1">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/tab1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="#8B824F"
                            app:chipIcon="@drawable/icon_university"
                            app:chipBackgroundColor="#F9F4DB"
                            android:text="University"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:background="#FFE7D3"
                        android:layout_weight="1">
                        <com.google.android.material.chip.Chip
                            android:id="@+id/tab2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:chipIcon="@drawable/icon_action_plan"
                            android:gravity="center"
                            app:chipBackgroundColor="#FFE7D3"
                            android:textColor="#D4B499"
                            android:text="Action Plan"/>
                    </LinearLayout>
            </LinearLayout>
            </LinearLayout>
</com.google.android.material.card.MaterialCardView>