<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints"
    android:padding="0sp"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8sp"
        android:layout_margin="5sp"
        android:outlineSpotShadowColor="@color/blue"
        >
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5sp">
            <TextView
                android:id="@+id/timeSlot"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:drawablePadding="5sp"
                android:textSize="12sp"
                android:padding="5sp"
                android:drawableLeft="@drawable/ic_baseline_av_timer_24"
                android:text="08:30am to 09:30am"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5sp">
                <TextView
                    android:id="@+id/subjectTitle"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5sp"
                    android:textSize="14sp"
                    android:text="Internet of things"
                    android:drawableLeft="@drawable/icon_subject"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3sp">
                    <TextView
                        android:id="@+id/subjectType"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingLeft="17sp"
                        android:layout_weight="1.5"
                        android:text="Internet of things"
                        />
                    <TextView
                        android:id="@+id/subjectBranch"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:gravity="end"
                        android:layout_weight="1"
                        android:text="Rev Div-IV TH"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0sp">
                    <TextView
                        android:id="@+id/EmployeeShortName"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:drawablePadding="5sp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_proffesor"
                        android:text="Mr. O. K. K. "
                        />
                    <TextView
                        android:id="@+id/roomNo"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:drawablePadding="5sp"
                        android:paddingLeft="25sp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_window"
                        android:text="M-404"
                        />
                    <TextView
                        android:id="@+id/all"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:drawablePadding="5sp"
                        android:paddingLeft="25sp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_group"
                        android:text="All"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/recessTime"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short Recess | 15MIN"
        android:background="@drawable/recess"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>