<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
        android:gravity="center"
    android:orientation="vertical">
        <LinearLayout
            android:id="@+id/headerBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:background="@drawable/nav_layout_curvshape_student"
            >

            <Button
                android:id="@+id/editColor"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:drawableRight="@drawable/ic_baseline_colorize_24"
                android:padding="20dp" />
        </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_marginTop="-40dp"
        app:cardElevation="0dp"
        app:strokeWidth="5dp"
        app:strokeColor="@color/white"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:contentDescription="TODO" />

    </com.google.android.material.card.MaterialCardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/header_studentId"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="S1234578945"/>
        <TextView
            android:id="@+id/userName"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:text="User Name"/>
        <TextView
            android:id="@+id/userEmail"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="@color/normal_text_color"
            android:textSize="14dp"
            android:text="User email"/>
        <TextView
            android:id="@+id/userCollage"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:textColor="@color/normal_text_color"
            android:textSize="14dp"
            android:text="Collage Name"/>
        <TextView
            android:id="@+id/userBranch"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/normal_text_color"
            android:padding="0dp"
            android:textSize="14dp"
            android:text="UserBranch"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>