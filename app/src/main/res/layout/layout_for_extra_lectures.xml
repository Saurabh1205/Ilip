<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:padding="0sp"
        android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8sp"
        android:layout_margin="5sp"
        app:cardCornerRadius="10sp"
        android:padding="5sp"
        android:outlineSpotShadowColor="@color/blue"
        >
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@color/blue"
               android:gravity="center"
               android:padding="5sp">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical">
                   <TextView
                       android:id="@+id/date"
                       style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:drawablePadding="5sp"
                       android:textSize="12sp"
                       android:padding="5sp"
                       android:drawableLeft="@drawable/ic_baseline_calendar_24"
                       android:text="15 Oct 2022(Tuesday)"/>
                   <TextView
                       android:id="@+id/timeSlot"
                       style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/white"
                       android:drawablePadding="5sp"
                       android:padding="5sp"
                       android:textSize="12sp"
                       android:drawableLeft="@drawable/icon_time"
                       android:text=" | 08:30am to 09:30am"/>

               </LinearLayout>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:gravity="right"
                   android:drawableRight="@drawable/ic_baseline_star_24"/>
           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="5sp">
                <TextView
                    android:id="@+id/subjectTitle"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:drawablePadding="5sp"
                    android:text="Internet of things"
                    android:drawableLeft="@drawable/icon_subject"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/subjectType"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingLeft="20sp"
                        android:layout_weight="1"
                        android:text="Internet of things"
                        />
                    <TextView
                        android:id="@+id/subjectBranch"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingLeft="0sp"
                        android:layout_weight="1.5"
                        android:text="Rev Div-IV TH"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/EmployeeShortName"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:drawablePadding="5sp"
                    android:paddingLeft="25sp"
                    android:layout_weight="1"
                    android:padding="0sp"
                    android:drawableLeft="@drawable/icon_proffesor"
                    android:text="Mr. O. K. K. "
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0sp">

                    <TextView
                        android:id="@+id/roomNo"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:drawablePadding="5sp"
                        android:paddingLeft="0sp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_window"
                        android:text="M-404"
                        />
                    <TextView
                        android:id="@+id/all"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:drawablePadding="5sp"
                        android:paddingLeft="0sp"
                        android:layout_weight="1.5"
                        android:drawableLeft="@drawable/icon_group"
                        android:text="All"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>