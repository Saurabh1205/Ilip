<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.syllabus.university.UniversityActivity"
    android:orientation="vertical">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarForUniversity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new"
        >
        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="University Syllabus"
            android:textColor="#4f4f4f"
            />

    </com.google.android.material.appbar.MaterialToolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F9F4DB"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp">
                    <TextView
                        android:id="@+id/subjectTitle"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawablePadding="8dp"
                        android:textSize="16dp"
                        android:text="Internet of things"
                        android:drawableLeft="@drawable/icon_subject"
                        />
                    <TextView
                        android:id="@+id/subjectType"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:paddingLeft="22dp"
                        android:layout_weight="1"
                        android:text="Internet of things"
                        />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:src="@drawable/icon_university"
                    android:contentDescription="TODO" />
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:outlineSpotShadowColor="@color/blue"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="0dp">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/ColorGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical"
                        android:padding="0dp"
                        android:gravity="center">
                        <TextView
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textAlignment="center"
                            android:text="Contact Hours"
                            android:padding="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp">
                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/normal_text_color"
                                android:text="Theory"/>

                            <TextView
                                android:id="@+id/contactHrsTheory"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12dp"
                                android:gravity="center"
                                android:textColor="@color/normal_text_color"
                                android:text="00"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp">
                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/normal_text_color"
                                android:text="Practical"/>
                            <TextView
                                android:id="@+id/contactHrsPractical"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/normal_text_color"
                                android:text="00"/>
                        </LinearLayout>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/credit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Credit : 0"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            />
                    </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/ColorGrey">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:padding="0dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textAlignment="center"
                            android:text="%Weightage"
                            android:padding="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp">
                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"

                                android:textAlignment="center"
                                android:textColor="@color/normal_text_color"
                                android:text="TEE"/>
                            <TextView
                                android:id="@+id/weightageTee"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/normal_text_color"
                                android:text="00"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp">
                            <TextView
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:textColor="@color/normal_text_color"
                                android:text="CCA"/>
                            <TextView
                                android:id="@+id/weightageCca"
                                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/normal_text_color"
                                android:text="00"/>
                        </LinearLayout>
                        <com.google.android.material.chip.Chip
                            android:id="@+id/TEEHrs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TEE Hrs : 0"
                            android:textAlignment="center"
                            android:textSize="14dp"
                            />
                    </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listForUniversitySyllabus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.sn.lib.NestedProgress
                android:id="@+id/custom_Loader_University"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:innerAnimInterpolator="anticipate"
                app:outerAnimInterpolator="overshoot"
                android:visibility="visible"
                app:outerLoaderAnimDuration="1500"
                />
            <ImageView
                android:id="@+id/universityNoData"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/no_data_found"
                android:visibility="visible"
                android:contentDescription="TODO" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>