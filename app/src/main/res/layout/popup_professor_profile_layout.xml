<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar4ProfileFaculty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new"
            app:titleTextColor="@color/white"
            >
            <TextView
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Faculty Profile"
                android:textColor="#4f4f4f"
                />

        </com.google.android.material.appbar.MaterialToolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:fitsSystemWindows="true"
            android:padding="10dp"
            >
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="2dp"
                app:strokeColor="@color/blue"
                android:fitsSystemWindows="true"
                app:cardCornerRadius="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_linear_gradfor_profile"
                    android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textEmail"
                            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/normal_text_color"
                            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                            android:text="abcd@gmail.com"/>
                        <TextView
                            android:id="@+id/textMobile"
                            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/normal_text_color"
                            android:textSize="12dp"
                            android:text="121654684"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.80"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="right">
                        <TextView
                            android:id="@+id/textDesignation"
                            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_business_center_24"
                            android:textSize="12dp"
                            android:drawablePadding="5dp"
                            android:padding="3sp"
                            android:textColor="@color/normal_text_color"
                            android:text="Asst. Professor" />
                        <TextView
                            android:id="@+id/textId"
                            style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:padding="3sp"
                            android:drawableLeft="@drawable/ic_custome_id"
                            android:textSize="12dp"
                            android:textColor="@color/normal_text_color"
                            android:text="E1321564654"/>
                    </LinearLayout>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="55dp">
                            <ImageView
                                android:id="@+id/imageProfile"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:src="@drawable/dummy_pic"
                                android:contentDescription="TODO" />
                        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
                        <TextView
                            android:id="@+id/textName"
                            style="@style/TextAppearance.Material3.ActionBar.Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:text="Dr.M.K.Patil"
                            android:padding="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                 <View
                     android:layout_width="match_parent"
                     android:layout_height="1dp"
                     android:background="@color/blue"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
               >
                <TextView
                    style="@style/TextAppearance.Material3.ActionBar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@color/normal_text_color"
                    android:padding="10dp"
                    android:text="About Me"/>
                <TextView
                    android:id="@+id/textAboutMe"
                    style="@style/TextAppearance.Material3.BodySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/normal_text_color"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:autoSizeTextType="uniform"
                    android:text="About me is a personal web hosting service co-founded by Ryan Freitas, Tony Conrad and Tim Young in October 2009. The site offers registered users a simple platform from which to link multiple online identities, relevant external sites, and popular social networking websites such as Facebook, Flickr, and Google+.
\n\nAbout.me is a personal web hosting service co-founded by Ryan Freitas, Tony Conrad and Tim Young in October 2009. The site offers registered users a simple platform from which to link multiple online identities, relevant external sites, and popular social networking websites such as Facebook, Flickr, and Google+.
bout.me is a personal web hosting service co-founded by Ryan Freitas, Tony Conrad and Tim Young in October 2009. The site offers registered users a simple platform from which to link multiple online identities, relevant external sites, and popular social networking websites such as Facebook, Flickr, and Google+. "
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/faculty_prof"
                    android:gravity="bottom"
                    android:layout_gravity="bottom|right"/>
            </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>